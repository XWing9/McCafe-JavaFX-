<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.TilePane?>

<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.Region?>

<HBox spacing="10.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="AppGUI.GuiController">

    <!-- Main container (80%) -->
    <TilePane fx:id="startingContainer" hgap="10" vgap="10" HBox.hgrow="ALWAYS" />

    <!-- Secondary container (20%) -->
    <VBox fx:id="orderBill" minWidth="300" alignment="TOP_CENTER">
        <Label text="Rechung:" id="billHeader"/>
        <Label fx:id="billLabel" id="billProdukts" maxWidth="180">
        </Label>

        <Region VBox.vgrow="ALWAYS"/>

        <Label fx:id="billPrice" id="endBetragSum">
            Endbetrag:
        </Label>
        <Button text="Rechnung" fx:id="GiveBill" onAction="#ShowBill"> </Button>
    </VBox>
</HBox>